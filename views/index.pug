    link(rel='stylesheet',href="/static/css/progressively.css")
    link(rel='stylesheet', href='/static/css/common.css')
    link(rel='stylesheet', href='/static/css/main.css')
body
    header
        div.container
            a.logo(href="#")
                i.icon.icon-bing
                   span 必应壁纸
            span.menu-btn
                i.icon.icon-menu
            nav
                ul.menu
                    li.active
                        a(href="#")
                            i.icon.icon-home
                            p.text 首页
                    li
                        a(href="#")
                            i.icon.icon-ranking
                            p.text 排行榜
                    li
                        a(href="about.html")
                            i.icon.icon-about
                            p.text 关于

                    //- <li class="search-wrap">
                    //-     <label class="search">
                    //-         <input type="text" placeholder="搜索关键字">
                    //-         <a class="search-btn"><i class="icon icon-search"></i></a>
                    //-     </label>
                    //- </li>
        
    div.holder
    div.mask
    div.container
        each val in data
            - var location = (val.country && val.city) ? val.country + ', ' + val.city : false;
            div.item
                div.card.progressive
                    //- img.progressive__img.progressive--not-loaded(src="https://static.ioliu.cn/bing/Hveravellir_ZH-CN12673758963_1920x1080.jpg?imageView2/1/w/43/h/24/q/100",data-progressive="https://static.ioliu.cn/bing/Hveravellir_ZH-CN12673758963_1920x1080.jpg?imageView2/1/w/760/h/480/q/100")
                    img.progressive__img.progressive--not-loaded(data-progressive=val.thumbnail,src=val.smallpic )
                    a.mark(href="detail.html")
                    div.description
                        h3 #{val.copyright}
                        p.calendar
                            i.icon.icon-calendar
                            em.t #{val.date}
                        if location
                            p.location
                                i.icon.icon-location
                                em.t #{location}
                    div.options
                        span.ctrl.heart(rid=val.id)
                            i.icon.icon-heart
                            em.t #{val.likes || 0}

                        span.ctrl.plus(rid=val.id)
                            i.icon.icon-plus

                        a.ctrl.download(href=`/d/${val.photo}?force=index`,target="_blank")
                            i.icon.icon-download


    script(src="/static/js/jquery-1.12.4.min.js")
    script(src="/static/js/progressively.js")
    script(src="/static/js/device.js")
    script(src="/static/js/main.js")
    script(src="/static/js/baidu-analysis.js")